{% extends 'base.html.twig' %}

{% block title %}Nouvelle épreuve{% endblock %}

{% block body %}
<div class="container">

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h1 class="h3 mb-0">Créer une épreuve</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.competition) }}
                {{ form_row(form.nom) }}
                <div class="row">
                    <div class="col-md-6 mb-3">{{ form_row(form.categorie) }}</div>
                    <div class="col-md-6 mb-3">{{ form_row(form.niveau) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Éléments Techniques</label>
                        {{ form_widget(form.elementsTechniques) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Éléments Artistiques</label>
                        {{ form_widget(form.elementsArtistiques) }}
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_epreuve_index') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
