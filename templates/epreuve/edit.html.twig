{% extends 'base.html.twig' %}

{% block title %}Modifier l'épreuve{% endblock %}

{% block body %}
<div class="container">

    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h1 class="h3 mb-0">Modifier l'épreuve : {{ epreuve.nom }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.competition) }}
                {{ form_row(form.nom) }}
                <div class="row">
                    <div class="col-md-6 mb-3">{{ form_row(form.categorie) }}</div>
                    <div class="col-md-6 mb-3">{{ form_row(form.niveau) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.elementsTechniques) }}
                        {{ form_errors(form.elementsTechniques) }}
                        {% for child in form.elementsTechniques %}
                            <div class="form-check">
                                {{ form_widget(child) }}
                                {{ form_label(child) }}
                            </div>
                        {% endfor %}
                        {{ form_help(form.elementsTechniques) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.elementsArtistiques) }}
                        {{ form_errors(form.elementsArtistiques) }}
                        {% for child in form.elementsArtistiques %}
                            <div class="form-check">
                                {{ form_widget(child) }}
                                {{ form_label(child) }}
                            </div>
                        {% endfor %}
                        {{ form_help(form.elementsArtistiques) }}
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_epreuve_index') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
