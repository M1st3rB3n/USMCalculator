{% extends 'base.html.twig' %}

{% block title %}Liste des épreuves{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des épreuves</h1>
        <div>
            <a href="{{ path('app_element_technique_index') }}" class="btn btn-outline-info me-2">Gérer les éléments techniques</a>
            <a href="{{ path('app_element_artistique_index') }}" class="btn btn-outline-info me-2">Gérer les éléments artistiques</a>
            <a href="{{ path('app_epreuve_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvelle épreuve</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Catégorie</th>
                        <th>Niveau</th>
                        <th>Nb éléments tech.</th>
                        <th>Nb éléments art.</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for epreuve in epreuves %}
                        <tr>
                            <td>{{ epreuve.nom }}</td>
                            <td>{{ epreuve.categorie.nom }}</td>
                            <td>{{ epreuve.niveau.nom }}</td>
                            <td>{{ epreuve.elementsTechniques|length }}</td>
                            <td>{{ epreuve.elementsArtistiques|length }}</td>
                            <td>
                                <a href="{{ path('app_epreuve_edit', {id: epreuve.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">Aucune épreuve trouvée.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
