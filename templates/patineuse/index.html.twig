{% extends 'base.html.twig' %}

{% block title %}Liste des patineuses par niveau{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des patineuses par niveau</h1>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="bi bi-file-earmark-excel"></i> Importer Excel / Google Sheet
            </button>
            <a href="{{ path('app_patineuse_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvelle patineuse</a>
        </div>
    </div>

    <!-- Modal d'importation -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">Importer des patineuses</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                {{ form_start(importForm) }}
                <div class="modal-body">
                    <p>Le fichier Excel doit contenir les colonnes suivantes dans cet ordre :</p>
                    <ul>
                        <li>Nom</li>
                        <li>Prénom</li>
                        <li>Club</li>
                        <li>Année de naissance</li>
                        <li>Niveau</li>
                    </ul>
                    {{ form_row(importForm.file) }}
                    <div class="my-3 text-center text-muted">OU</div>
                    {{ form_row(importForm.googleSheetUrl) }}
                    <div class="form-text mt-1">
                        <small>
                            <i class="bi bi-info-circle"></i> Le Google Sheet doit être accessible au web
                            (Fichier > Partager > Publier sur le Web, ou Partager avec "Tous les utilisateurs disposant du lien").
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Importer</button>
                </div>
                {{ form_end(importForm) }}
            </div>
        </div>
    </div>

    {% for niveau in niveaux %}
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">{{ niveau.nom }}</h2>
                <span class="badge bg-light text-primary">{{ niveau.patineuses|length }} patineuses</span>
            </div>
            <div class="card-body">
                {% if niveau.patineuses|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Club</th>
                                    <th>Année</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for patineuse in niveau.patineuses %}
                                    <tr>
                                        <td>{{ patineuse.prenom }}</td>
                                        <td>{{ patineuse.nom }}</td>
                                        <td>
                                            {% if patineuse.club %}
                                                {{ patineuse.club.nom }}{% if patineuse.club.ville %} <small class="text-muted">({{ patineuse.club.ville }})</small>{% endif %}
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ patineuse.anneeDeNaissance }}</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <a href="{{ path('app_patineuse_edit', {id: patineuse.id}) }}" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-pencil"></i> Modifier
                                                </a>
                                                <form method="post" action="{{ path('app_patineuse_delete', {id: patineuse.id}) }}" style="display:inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette patineuse ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patineuse.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted mb-0"><i class="bi bi-info-circle"></i> Aucune patineuse dans ce niveau.</p>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun niveau n'a été trouvé.
        </div>
    {% endfor %}
</div>
{% endblock %}
