<div {{ attributes }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action',
            'data-live-action-param': 'save',
            'data-turbo': 'true'
        }
    }) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_row(form.prenom) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                {{ form_row(form.anneeDeNaissance) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_row(form.niveau) }}
            </div>
            <div class="col-md-4 mb-3">
                {{ form_row(form.club) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_patineuse_index') }}" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary" {{ form.vars.submitted and not form.vars.valid ? 'disabled' : '' }}>
                Enregistrer
            </button>
        </div>
    {{ form_end(form) }}
</div>
