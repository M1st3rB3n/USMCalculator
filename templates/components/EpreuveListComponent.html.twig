<div {{ attributes }}>
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Épreuves de la compétition</h5>
            <div data-loading="show" class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
        <div class="card-body p-0">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger m-2">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success m-2">{{ message }}</div>
            {% endfor %}

            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nom</th>
                            <th>Catégorie</th>
                            <th>Niveau</th>
                            <th class="text-center">Éléments (T/A)</th>
                            <th class="text-center">Engagés</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for epreuve in competition.epreuves %}
                            <tr>
                                <td class="ps-4 fw-bold">{{ epreuve.nom }}</td>
                                <td>{{ epreuve.categorie ? epreuve.categorie.nom : '-' }}</td>
                                <td>{{ epreuve.niveau ? epreuve.niveau.nom : '-' }}</td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">{{ epreuve.elementsTechniques|length }} T</span>
                                    <span class="badge bg-warning text-dark">{{ epreuve.elementsArtistiques|length }} A</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">{{ epreuve.engagements|length }}</span>
                                </td>
                                <td class="text-end pe-4 d-flex gap-2 justify-content-end">
                                    <button
                                        class="btn btn-sm btn-outline-primary"
                                        data-action="live#action"
                                        data-live-action-param="edit"
                                        data-live-epreuve-param="{{ epreuve.id }}"
                                    >
                                        <i class="bi bi-pencil"></i> Modifier
                                    </button>
                                    <button
                                        class="btn btn-sm btn-outline-danger"
                                        data-action="live#action"
                                        data-live-action-param="delete"
                                        data-live-epreuve-param="{{ epreuve.id }}"
                                        data-live-confirm="Êtes-vous sûr de vouloir supprimer cette épreuve ?"
                                        {% if epreuve.engagements|length > 0 %}disabled title="Impossible de supprimer une épreuve avec des engagements"{% endif %}
                                    >
                                        <i class="bi bi-trash"></i> Supprimer
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center p-4 text-muted">
                                    <i class="bi bi-info-circle"></i> Aucune épreuve définie pour cette compétition.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
