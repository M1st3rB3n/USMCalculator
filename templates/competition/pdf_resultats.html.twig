<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Résultats - {{ competition.nom }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }
        h1 {
            color: #007bff;
            margin-bottom: 5px;
        }
        .date {
            font-style: italic;
            color: #666;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .text-center {
            text-align: center;
        }
        .club-section {
            margin-top: 40px;
        }
        .epreuve-card {
            margin-top: 30px;
            page-break-inside: avoid;
        }
        .epreuve-header {
            background-color: #e9ecef;
            padding: 10px;
            border: 1px solid #ddd;
            font-weight: bold;
            font-size: 14px;
        }
        .badge {
            display: inline-block;
            padding: 3px 7px;
            font-size: 10px;
            font-weight: bold;
            border-radius: 10px;
            background-color: #6c757d;
            color: white;
            margin-left: 5px;
        }
        .badge-info {
            background-color: #17a2b8;
        }
        .page-break {
            page-break-after: always;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Résultats : {{ competition.nom }}</h1>
        <div class="date">Le {{ competition.date|date('d/m/Y') }}</div>
    </div>

    <div class="club-section">
        <h2>Classement des Clubs</h2>
        <table>
            <thead>
                <tr>
                    <th style="width: 40px;">Rang</th>
                    <th>Club</th>
                    <th class="text-center">Engagements</th>
                    <th class="text-center">Total Points</th>
                    <th class="text-center">Moyenne</th>
                </tr>
            </thead>
            <tbody>
                {% set rank = 1 %}
                {% for stats in clubStats %}
                    <tr>
                        <td class="text-center"><strong>{{ rank }}</strong></td>
                        <td>{{ stats.club.nom }}</td>
                        <td class="text-center">{{ stats.nombreEngagements }}</td>
                        <td class="text-center">{{ stats.totalPoints|number_format(2, ',', ' ') }}</td>
                        <td class="text-center"><strong>{{ stats.moyenne|number_format(2, ',', ' ') }}</strong></td>
                    </tr>
                    {% set rank = rank + 1 %}
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="page-break"></div>

    <h2>Détails par Épreuve</h2>
    {% for epreuve in competition.epreuves %}
        <div class="epreuve-card">
            <div class="epreuve-header">
                {{ epreuve.nom }}
                <span class="badge">{{ epreuve.categorie.nom|default('N/A') }}</span>
                <span class="badge badge-info">{{ epreuve.niveau.nom|default('N/A') }}</span>
            </div>
            <table>
                <thead>
                    <tr>
                        <th style="width: 40px;">Rang</th>
                        <th>Patineuse</th>
                        <th>Club</th>
                        <th class="text-center">Total Notes</th>
                    </tr>
                </thead>
                <tbody>
                    {% set epreuveRank = 1 %}
                    {% for engagement in epreuve.engagements|sort((a, b) => b.totalNotes <=> a.totalNotes) %}
                        <tr>
                            <td class="text-center">{{ epreuveRank }}</td>
                            <td>{{ engagement.patineuse.nom|upper }} {{ engagement.patineuse.prenom }}</td>
                            <td>{{ engagement.patineuse.club.nom|default('-') }}</td>
                            <td class="text-center"><strong>{{ engagement.totalNotes|number_format(2, ',', ' ') }}</strong></td>
                        </tr>
                        {% set epreuveRank = epreuveRank + 1 %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}
</body>
</html>
