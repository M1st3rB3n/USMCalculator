{% extends 'base.html.twig' %}

{% block title %}Modifier la Compétition{% endblock %}

{% block body %}
<div class="container">

    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h1 class="h3 mb-0">Modifier la compétition : {{ competition.nom }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8 mb-3">{{ form_row(form.nom) }}</div>
                    <div class="col-md-4 mb-3">{{ form_row(form.date) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_label(form.epreuves) }}
                    {{ form_errors(form.epreuves) }}
                    {% for child in form.epreuves %}
                        <div class="form-check">
                            {{ form_widget(child) }}
                            {{ form_label(child) }}
                        </div>
                    {% endfor %}
                    {{ form_help(form.epreuves) }}
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_competition_index') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
