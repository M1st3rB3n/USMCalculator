{% extends 'base.html.twig' %}

{% block title %}Résultats - {{ competition.nom }}{% endblock %}

{% block body %}
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_competition_index') }}">Compétitions</a></li>
            <li class="breadcrumb-item active" aria-current="page">Résultats {{ competition.nom }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Classement par Club : {{ competition.nom }}</h1>
        <span class="badge bg-primary fs-5">{{ competition.date|date('d/m/Y') }}</span>
    </div>

    <div class="card shadow mb-5">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0 h5">Classement des Clubs</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4" style="width: 50px;">#</th>
                        <th>Club</th>
                        <th class="text-center">Engagements</th>
                        <th class="text-center">Total Points</th>
                        <th class="text-center">Moyenne (Score)</th>
                    </tr>
                </thead>
                <tbody>
                    {% set rank = 1 %}
                    {% for stats in clubStats %}
                        <tr>
                            <td class="ps-4"><strong>{{ rank }}</strong></td>
                            <td>
                                {% if stats.club.logo %}
                                    <img src="{{ asset('uploads/logos/' ~ stats.club.logo) }}" alt="{{ stats.club.nom }}" style="height: 24px;" class="me-2">
                                {% endif %}
                                {{ stats.club.nom }}
                            </td>
                            <td class="text-center">{{ stats.nombreEngagements }}</td>
                            <td class="text-center">{{ stats.totalPoints|number_format(2, ',', ' ') }}</td>
                            <td class="text-center">
                                <span class="badge bg-success fs-6">
                                    {{ stats.moyenne|number_format(3, ',', ' ') }}
                                </span>
                            </td>
                        </tr>
                        {% set rank = rank + 1 %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Aucun résultat disponible pour cette compétition.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <hr class="my-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Détails par Épreuve</h2>
    </div>

    {% for epreuve in competition.epreuves %}
        <div class="card shadow mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h3 class="mb-0">{{ epreuve.nom }}</h3>
                <div>
                    <span class="badge bg-secondary">{{ epreuve.categorie.nom|default('N/A') }}</span>
                    <span class="badge bg-info text-dark">{{ epreuve.niveau.nom|default('N/A') }}</span>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4" style="width: 50px;">#</th>
                            <th>Patineuse</th>
                            <th>Club</th>
                            <th>Année de Naissance</th>
                            <th class="text-center">Total Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set epreuveRank = 1 %}
                        {% for engagement in epreuve.engagements|sort((a, b) => b.totalNotes <=> a.totalNotes) %}
                            <tr>
                                <td class="ps-4"><strong>{{ epreuveRank }}</strong></td>
                                <td>
                                    <strong>{{ engagement.patineuse.nom|upper }}</strong> {{ engagement.patineuse.prenom }}
                                </td>
                                <td>{{ engagement.patineuse.club.nom|default('-') }}</td>
                                <td>{{ engagement.patineuse.anneeDeNaissance|default('-') }}</td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">{{ engagement.totalNotes|number_format(2, ',', ' ') }}</span>
                                </td>
                            </tr>
                            {% set epreuveRank = epreuveRank + 1 %}
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">Aucun engagement pour cette épreuve.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            Aucune épreuve n'est configurée pour cette compétition.
        </div>
    {% endfor %}

    <div class="mt-4">
        <a href="{{ path('app_competition_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
