{% extends 'base.html.twig' %}

{% block title %}Liste des compétitions{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des compétitions</h1>
        <div>
            <a href="{{ path('app_competition_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvelle compétition</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Date</th>
                        <th class="text-center">Nb épreuves</th>
                        <th class="text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for competition in competitions %}
                        <tr>
                            <td class="fw-bold">{{ competition.nom }}</td>
                            <td>{{ competition.date|date('d/m/Y') }}</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">{{ competition.epreuves|length }}</span>
                            </td>
                            <td class="text-end px-4">
                                <a href="{{ path('app_competition_epreuves', {id: competition.id}) }}" class="btn btn-sm btn-outline-info">
                                    Épreuves
                                </a>
                                <a href="{{ path('app_competition_engagements', {id: competition.id}) }}" class="btn btn-sm btn-outline-success ms-1">
                                    Engagements
                                </a>
                                <a href="{{ path('app_competition_resultats', {id: competition.id}) }}" class="btn btn-sm btn-outline-primary ms-1">
                                    Résultats
                                </a>
                                <a href="{{ path('app_competition_edit', {id: competition.id}) }}" class="btn btn-sm btn-outline-warning ms-1">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <i class="bi bi-info-circle"></i> Aucune compétition trouvée.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
