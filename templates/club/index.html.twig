{% extends 'base.html.twig' %}

{% block title %}Liste des clubs{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des clubs</h1>
        <a href="{{ path('app_club_new') }}" class="btn btn-success">Ajouter un club</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Nom</th>
                        <th>Ville</th>
                        <th>Nombre de patineuses</th>
                        <th class="text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for club in clubs %}
                        <tr>
                            <td>
                                {% if club.logo %}
                                    <img src="{{ asset('uploads/logos/' ~ club.logo) }}" alt="Logo {{ club.nom }}" style="max-height: 40px; max-width: 60px;">
                                {% else %}
                                    <span class="text-muted">No logo</span>
                                {% endif %}
                            </td>
                            <td>{{ club.nom }}</td>
                            <td>{{ club.ville|default('N/A') }}</td>
                            <td>{{ club.patineuses|length }}</td>
                            <td class="text-end px-4">
                                <a href="{{ path('app_club_edit', {id: club.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Aucun club trouv√©.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
