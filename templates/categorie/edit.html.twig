{% extends 'base.html.twig' %}

{% block title %}Modifier Catégorie{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h1 class="h3 mb-0">Modifier la catégorie : {{ categorie.nom }}</h1>
        </div>
        <div class="card-body">
            {{ component('CategorieFormComponent', { initialFormData: categorie }) }}
        </div>
    </div>
</div>
{% endblock %}
