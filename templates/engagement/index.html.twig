{% extends 'base.html.twig' %}

{% block title %}Liste des engagements{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des engagements</h1>
        <a href="{{ path('app_engagement_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouvel engagement
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Patineuse</th>
                            <th>Épreuve</th>
                            <th class="text-center">Total Notes</th>
                            <th class="text-end px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for engagement in engagements %}
                            <tr>
                                <td class="fw-bold">{{ engagement.patineuse.prenom }} {{ engagement.patineuse.nom }}</td>
                                <td>{{ engagement.epreuve.nom }}</td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">{{ engagement.totalNotes|number_format(2, ',', ' ') }}</span>
                                </td>
                                <td class="text-end px-4">
                                    <div class="btn-group">
                                        <a href="{{ path('app_saisie_notes', {patineuse: engagement.patineuse.id, epreuve: engagement.epreuve.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil-square"></i> Saisir notes
                                        </a>
                                        <a href="{{ path('app_engagement_edit', {id: engagement.id}) }}" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    <i class="bi bi-info-circle"></i> Aucun engagement trouvé.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
