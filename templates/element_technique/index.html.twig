{% extends 'base.html.twig' %}

{% block title %}Liste des éléments techniques{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des éléments techniques</h1>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="bi bi-file-earmark-excel"></i> Importer Excel / Google Sheet
            </button>
            <a href="{{ path('app_element_technique_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvel élément
            </a>
        </div>
    </div>

    <!-- Modal d'importation -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">Importer des éléments techniques</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                {{ form_start(importForm) }}
                <div class="modal-body">
                    <p>Le fichier Excel doit contenir les colonnes suivantes dans cet ordre :</p>
                    <ul>
                        <li>Nom</li>
                        <li>Famille</li>
                        <li>Score</li>
                        <li>QoE</li>
                    </ul>
                    {{ form_row(importForm.file) }}
                    <div class="my-3 text-center text-muted">OU</div>
                    {{ form_row(importForm.googleSheetUrl) }}
                    <div class="form-text mt-1">
                        <small>
                            <i class="bi bi-info-circle"></i> Le Google Sheet doit être accessible au web
                            (Fichier > Partager > Publier sur le Web, ou Partager avec "Tous les utilisateurs disposant du lien").
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Importer</button>
                </div>
                {{ form_end(importForm) }}
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Famille</th>
                        <th>Score</th>
                        <th>QoE</th>
                        <th class="text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for element in elements %}
                        <tr>
                            <td>{{ element.nom }}</td>
                            <td>{{ element.famille|default('N/A') }}</td>
                            <td>{{ element.score|default('0') }}</td>
                            <td>{{ element.QoE|default('0') }}</td>
                            <td class="text-end px-4">
                                <a href="{{ path('app_element_technique_edit', {id: element.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">Aucun élément trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
