{% extends 'base.html.twig' %}

{% block title %}Paramètres : Niveaux{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Niveaux</h1>
        <a href="{{ path('app_niveau_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau niveau
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th class="text-center">Nb Patineuses</th>
                        <th class="text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for niveau in niveaux %}
                        <tr>
                            <td>{{ niveau.nom }}</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">{{ niveau.patineuses|length }}</span>
                            </td>
                            <td class="text-end px-4">
                                <div class="btn-group">
                                    <a href="{{ path('app_niveau_edit', {id: niveau.id}) }}" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_niveau_delete', {id: niveau.id}) }}" style="display:inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce niveau ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ niveau.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                <i class="bi bi-info-circle"></i> Aucun niveau trouvé.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
